page {
  background-color: #f5f5f5;
}

.stock {
  padding: 0 40rpx;
}

.stock-list {
  position: relative;
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  font-size: 24rpx;
}

.product-main {
  position: relative;
  padding-left: 200rpx;
}

.product-main .product-img {
  position: absolute;
  top: 0;
  left: 0;
  height: 160rpx;
}

.product-main .product-img image {
  width: 160rpx;
  height: 160rpx;
}

.product-main .product-info {
  min-height: 160rpx;
}

.product-main .product-info view {
  margin: 10rpx 0;
}

.warnNum {
  color: #ff5959;
}

.detail-stock {
  float: right;
  color: #48cfcf;
}

.detail-wrapper {
  height: 100vh;
  width: 500rpx;
  background-color: #fff;
}

.details {
  padding-left: 80rpx;
  padding-top: 80rpx;
  font-size: 28rpx;
  color: #666;
}

.details .details-item {
  position: relative;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}
.details .details-item.on,.details .details-item.on .details-item-main{
  color: #FF5959;
}

.details .details-item::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e9eaec;
  border-bottom-width: 1px;
  left: 0;
  right: 0;
}

.details .details-item .details-item-main {
  font-size: 32rpx;
  color: #333;
  margin-top: 10rpx;
}
